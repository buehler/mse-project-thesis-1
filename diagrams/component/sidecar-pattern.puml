@startuml
!include https://raw.githubusercontent.com/bschwarz/puml-themes/master/themes/materia-outline/puml-theme-materia-outline.puml

node "Application Pod" {
    component [Main Container] as m
    component [Sidecar A\n(Log Collector)] as sa
    component [Sidecar B\n(Monitoring Agent)] as sb
    database "File System" as f

    m -down- f
    sa -down- f
    sb -down- f
}

@enduml
